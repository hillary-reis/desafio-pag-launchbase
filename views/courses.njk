{% extends 'layout.njk' %}

{% block head %}
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <title>Cursos | {{ about.title }} </title>
{% endblock %}

{% block content %}
  <div id="title"> <h2>Cursos da Rocketseat</h2> </div>

  <section class="courses">
    {% for item in items %}
      <div class="course">
        <div class="course-img"> <img src="{{ item.img }}" alt="{{ item.alt }}"> </div>
        <div class="info"> <p> {{ item.info }} </p> </div>
        <div class="price"> <p> {{ item.price }} </p> </div>
      </div>
    {% endfor %}
  </section>
  
  <div id="modal-overlay">
    <div class="modal">
      <div class="modal-img"> <img src=" " alt=" "> </div>
      <div class="description">
        <div class="modal-description"> <p> </p> </div>
        <div class="modal-price"> <p> </p> </div>
      </div>
      <a class="close-modal"> <i class="material-icons">close</i> </a>
    </div>

  </div>

  <script src="script.js"></script>
{% endblock %}