{% extends 'layout.njk' %}

{% block head %}
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <title>Cursos | Rocketseat </title>
{% endblock %}

{% block content %}
  <div id="title"> <h2>Cursos da Rocketseat</h2> </div>

  <section class="courses">
    {% for item in items %}
      <div class="course" id="{{item.id}}">
        <div class="course-img"> <img src="{{ item.img }}" alt="{{ item.alt }}"> </div>
        <div class="info"> <p> {{ item.info }} </p> </div>
        <div class="price"> <p> {{ item.price }} </p> </div>
      </div>
    {% endfor %}
  </section>

  <script src="script.js"></script>

{% endblock %}