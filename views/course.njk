{% extends 'layout.njk' %}

{% block head %}
  <title> {{item.name}} | Rocketseat </title>
{% endblock %}

{% block content %}
  <div id="title"> <h2> {{item.name}} </h2> </div>

  <section class="the-course">
      <div class="course" id="{{item.id}}">
        <div class="course-img"> <a href="https://rocketseat.com.br/{{item.id}}" target="_blank"> <img src="{{ item.img }}" alt="{{ item.alt }}"> </a> </div>
        <div class="info"> <p> {{ item.info }} </p> </div>
        <div class="price"> <p> {{ item.price }} </p> </div>
      </div>
  </section>

{% endblock %}